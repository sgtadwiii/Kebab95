---
import GlobalScriptManager from '../components/GlobalScriptManager.vue';
export interface Props { title?: string; }
const { title = 'Kebab 95 Astro' } = Astro.props;
---
<html lang="id" class="">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" /><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin /><link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    
    {/* PERBAIKAN: Memuat jwt-decode dari CDN di sini */}
    <!-- <script is:inline src="https://unpkg.com/jwt-decode/build/jwt-decode.js"></script> -->
    
    <style is:global> body { font-family: 'Poppins', sans-serif; } ::-webkit-scrollbar { width: 8px; } ::-webkit-scrollbar-track { background: transparent; } ::-webkit-scrollbar-thumb { background-color: #cbd5e1; border-radius: 20px; border: 3px solid transparent; } :global(html.dark) ::-webkit-scrollbar-thumb { background-color: #4b5563; } </style>
</head>
<body class="bg-slate-100 dark:bg-slate-900 text-slate-800 dark:text-slate-200 antialiased">
    <div class="flex h-screen w-screen overflow-hidden">
        <aside class="w-64 flex-shrink-0 bg-gray-900 text-slate-300 p-6 flex flex-col">
            <div class="mb-8"> <h1 class="text-3xl font-bold text-yellow-400">Kebab 95</h1> <p class="text-sm text-slate-400">Peta Outlet Interaktif</p> </div>
            <nav class="flex flex-col space-y-2 text-sm font-medium">
                <a href="/" class="flex items-center space-x-3 p-2 rounded-md hover:bg-slate-700 hover:text-white"> <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h7.5" /></svg> <span>Beranda Peta</span> </a>
                <button id="theme-toggle-btn" class="flex items-center space-x-3 p-2 rounded-md hover:bg-slate-700 hover:text-white"> <span id="theme-toggle-icon"></span> <span id="theme-toggle-text"></span> </button>
                <div class="my-2 border-t border-gray-700"></div>
                <p class="px-2 pt-2 text-xs font-semibold text-slate-500 uppercase tracking-wider">Tampilan Peta</p>
                <button id="map-layer-toggle-btn" class="flex items-center space-x-3 p-2 rounded-md hover:bg-slate-700 hover:text-white"> <span id="map-layer-toggle-icon"></span> <span id="map-layer-toggle-text"></span> </button>
                <a id="admin-add-outlet-btn" href="/admin" class="hidden flex items-center space-x-3 p-2 mt-4 rounded-md border-2 border-green-500 text-green-500 hover:bg-green-500 hover:text-white transition-colors"> <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg> <span>Tambahkan Outlet</span> </a>
            </nav>
            <div id="user-session-container" class="mt-auto">
                <div id="user-info" class="hidden"><p class="text-sm text-center">Hi, <strong id="username-display" class="font-medium text-yellow-400">User</strong>!</p><button id="logout-btn" class="mt-2 w-full text-center text-sm text-red-500 hover:underline">Logout</button></div>
                <div id="guest-info" class="hidden"><a href="/login" class="block w-full text-center text-sm font-medium text-yellow-400 hover:underline">Login / Register</a></div>
            </div>
        </aside>
        <main class="flex-grow overflow-y-auto relative"> <slot /> </main>
    </div>
    <GlobalScriptManager client:only="vue" />
</body>
</html>