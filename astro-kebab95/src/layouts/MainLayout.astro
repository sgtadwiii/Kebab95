---
// src/layouts/MainLayout.astro
import SessionManager from '../components/SessionManager.vue';

export interface Props {
    title?: string;
}
const { title = 'Kebab 95 Astro' } = Astro.props;

// --- BAGIAN YANG HILANG SEBELUMNYA, SEKARANG DIKEMBALIKAN ---
const themeIconLight = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" /></svg>`;
const themeIconDark = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25c0 5.385 4.365 9.75 9.75 9.75 2.572 0 4.92-.99 6.697-2.657z" /></svg>`;
---

<html lang="id" class="">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" /><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin /><link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <style is:global>
        body { font-family: 'Poppins', sans-serif; }
        ::-webkit-scrollbar { width: 8px; } ::-webkit-scrollbar-track { background: transparent; } ::-webkit-scrollbar-thumb { background-color: #cbd5e1; border-radius: 20px; border: 3px solid transparent; } :global(html.dark) ::-webkit-scrollbar-thumb { background-color: #4b5563; }
    </style>
</head>
<body class="bg-slate-100 dark:bg-slate-900 text-slate-800 dark:text-slate-200 antialiased">
    <div class="flex h-screen w-screen overflow-hidden">
        <aside class="w-64 flex-shrink-0 bg-gray-900 text-slate-300 p-6 flex flex-col">
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-yellow-400">Kebab 95</h1>
                <p class="text-sm text-slate-400">Peta Outlet Interaktif</p>
            </div>
            <nav class="flex flex-col space-y-2">
                <button id="theme-toggle-btn" class="flex items-center space-x-3 p-2 rounded-md text-sm font-medium">
                    <span id="theme-toggle-icon"></span>
                    <span id="theme-toggle-text"></span>
                </button>
                <button id="osm-layer-btn" class="flex items-center space-x-3 p-2 rounded-md text-sm font-medium">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" /></svg>
                    <span>Peta Standar</span>
                </button>
                <button id="satellite-layer-btn" class="flex items-center space-x-3 p-2 rounded-md text-sm font-medium">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A11.978 11.978 0 0112 16.5c-2.998 0-5.74-1.1-7.843-2.918m15.686-4.832A8.959 8.959 0 0021 12a8.958 8.958 0 01-2.582 5.918" /></svg>
                    <span class="truncate">Mode Satelit</span>
                </button>
                <div class="my-2 border-t border-gray-700"></div>
                <button id="heatmap-btn" class="flex items-center space-x-3 p-2 rounded-md text-sm font-medium">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M15.362 5.214A8.252 8.252 0 0112 21 8.25 8.25 0 016.038 7.048 8.287 8.287 0 009 9.6a8.983 8.983 0 013.362-3.797A8.23 8.23 0 0112 3c1.135 0 2.236.206 3.232.566l-1.87 1.648z" /><path stroke-linecap="round" stroke-linejoin="round" d="M12 18a3.75 3.75 0 00.495-7.467l-5.131-4.249A8.25 8.25 0 002.25 12c0 2.252.904 4.33 2.383 5.803a3.732 3.732 0 00-.495-.303l5.13 4.248A3.75 3.75 0 0012 18zm6.352-3.362l-5.13-4.248A3.752 3.752 0 0012 6.75c-1.135 0-2.236.206-3.232.566l5.13 4.248a3.752 3.752 0 00.495.303V12a8.25 8.25 0 00-2.25-5.803A8.287 8.287 0 0115 9.602c1.058 0 2.056.224 2.952.622M21 12a8.25 8.25 0 00-2.25-5.803A8.287 8.287 0 0115 9.602a8.983 8.983 0 00-3.362-3.797A8.23 8.23 0 0012 3C6.477 3 2 7.477 2 13.5S6.477 24 12 24s10-4.477 10-10.5c0-.202-.01-.401-.029-.599z" /></svg>
                    <span class="truncate">Heatmap</span>
                </button>
                <a id="admin-add-outlet-btn" href="/admin" class="hidden flex items-center space-x-3 p-2 mt-4 rounded-md text-sm font-semibold border-2 border-green-500 text-green-500 hover:bg-green-500 hover:text-white transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    <span>Tambahkan Outlet</span>
                </a>
            </nav>
            <div id="user-session-container" class="mt-auto">
                 {/* ... Konten Sesi User tidak berubah ... */}
            </div>
        </aside>
        <main class="flex-grow overflow-y-auto relative"> <slot /> </main>
    </div>
    <SessionManager client:only="vue" />
    <script define:vars={{ themeIconLight, themeIconDark }}>
        function runLayoutScripts() {
            const eventBus = { on(event, callback) { document.addEventListener(event, (e) => callback(e.detail)); }, dispatch(event, data) { document.dispatchEvent(new CustomEvent(event, { detail: data })); }, remove(event, callback) { document.removeEventListener(event, callback); } };
            const htmlEl = document.documentElement;
            const themeToggleBtn = document.getElementById('theme-toggle-btn');
            const themeToggleIconEl = document.getElementById('theme-toggle-icon');
            const themeToggleTextEl = document.getElementById('theme-toggle-text');
            const localStorageKey = 'kebab95-astro-theme';
            function applyTheme(theme) {
                if (theme === 'dark') {
                    htmlEl.classList.add('dark');
                    if(themeToggleIconEl) themeToggleIconEl.innerHTML = themeIconDark;
                    if(themeToggleTextEl) themeToggleTextEl.textContent = 'Ganti ke Terang';
                } else {
                    htmlEl.classList.remove('dark');
                    if(themeToggleIconEl) themeToggleIconEl.innerHTML = themeIconLight;
                    if(themeToggleTextEl) themeToggleTextEl.textContent = 'Ganti ke Gelap';
                }
            }
            function toggleTheme() {
                const newTheme = htmlEl.classList.contains('dark') ? 'light' : 'dark';
                localStorage.setItem(localStorageKey, newTheme);
                applyTheme(newTheme);
            }
            let currentTheme = localStorage.getItem(localStorageKey) || (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            applyTheme(currentTheme);
            if (themeToggleBtn && !themeToggleBtn.dataset.listenerAttached) {
                themeToggleBtn.addEventListener('click', toggleTheme);
                themeToggleBtn.dataset.listenerAttached = 'true';
            }
            const satelliteBtn = document.getElementById('satellite-layer-btn');
            const osmBtn = document.getElementById('osm-layer-btn');
            const activeBtnClasses = ['bg-yellow-400/20', 'text-yellow-300', 'font-semibold'];
            const inactiveBtnClasses = ['text-slate-300', 'hover:bg-slate-700', 'hover:text-white'];
            function updateButtonStyles(activeButton, inactiveButton) {
                if (activeButton) {
                  activeButton.classList.remove(...inactiveBtnClasses);
                  activeButton.classList.add(...activeBtnClasses);
                }
                if (inactiveButton) {
                  inactiveButton.classList.remove(...activeBtnClasses);
                  inactiveButton.classList.add(...inactiveBtnClasses);
                }
            }
            if (satelliteBtn && !satelliteBtn.dataset.listenerAttached) {
                satelliteBtn.addEventListener('click', () => {
                    eventBus.dispatch('changeMapLayer', 'satellite');
                    updateButtonStyles(satelliteBtn, osmBtn);
                });
                satelliteBtn.dataset.listenerAttached = 'true';
            }
            if (osmBtn && !osmBtn.dataset.listenerAttached) {
                osmBtn.addEventListener('click', () => {
                    eventBus.dispatch('changeMapLayer', 'openstreetmap');
                    updateButtonStyles(osmBtn, satelliteBtn);
                });
                osmBtn.dataset.listenerAttached = 'true';
            }
            if(osmBtn && satelliteBtn){
                 updateButtonStyles(osmBtn, satelliteBtn);
            }
        }
        document.addEventListener('astro:page-load', runLayoutScripts, { once: true });
    </script>
</body>
</html>