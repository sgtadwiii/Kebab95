---
// src/pages/admin/index.astro - TANPA SCRIPT CLIENT-SIDE
import MainLayout from '../../layouts/MainLayout.astro';
import AddOutletForm from '../../components/AddOutletForm.vue';
import ManageOutlets from '../../components/ManageOutlets.vue';
---
<MainLayout title="Dashboard Admin - Kebab 95">
    
    {/* Div ini akan ditampilkan atau disembunyikan oleh GlobalScriptManager.vue */}
    <div id="admin-content" class="p-4 sm:p-6 lg:p-8">
        <div class="mb-8">
            <h2 class="text-2xl font-bold text-slate-800 dark:text-slate-100">Monitoring</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mt-4">
                
                <div class="bg-white dark:bg-slate-800 p-5 rounded-lg shadow">
                    <h4 class="text-sm font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Total Outlet</h4>
                    <p class="text-3xl font-bold text-slate-900 dark:text-white mt-1">12</p>
                </div>

                <div class="bg-white dark:bg-slate-800 p-5 rounded-lg shadow">
                    <h4 class="text-sm font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Rating Tertinggi</h4>
                    <p class="text-3xl font-bold text-slate-900 dark:text-white mt-1">4.8 <span class="text-yellow-500">â˜…</span></p>
                </div>
                
                 <div class="bg-white dark:bg-slate-800 p-5 rounded-lg shadow">
                    <h4 class="text-sm font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Omset Hari Ini</h4>
                    <p class="text-3xl font-bold text-slate-900 dark:text-white mt-1">Rp 1.2M</p>
                </div>

                 <div class="bg-white dark:bg-slate-800 p-5 rounded-lg shadow">
                    <h4 class="text-sm font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Komentar Baru</h4>
                    <p class="text-3xl font-bold text-slate-900 dark:text-white mt-1">5</p>
                </div>

            </div>
        </div>

        {/* Bagian Konten Kanan-Kiri */}
        <div class="grid grid-cols-1 lg:grid-cols-5 gap-8">
            <div class="lg:col-span-3">
                <div class="p-6 bg-white dark:bg-slate-800 rounded-lg shadow h-full">
                    <h3 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white">Daftar Outlet Saat Ini</h3>
                    <ManageOutlets client:load />
                </div>
            </div>
            <div class="lg:col-span-2 space-y-4">
                <div class="p-6 bg-white dark:bg-slate-800 rounded-lg shadow">
                    <h3 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white">Aksi Outlet</h3>
                    <div class="relative">
                        <button id="toggle-actions-btn" class="w-full flex items-center justify-between p-3 bg-yellow-500 hover:bg-yellow-600 text-white font-semibold rounded-md shadow focus:outline-none focus:ring-2 focus:ring-yellow-400">
                            <span>Pilih Aksi</span>
                            <svg class="w-4 h-4 transition-transform" id="actions-arrow" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" /></svg>
                        </button>
                        <div id="actions-menu" class="hidden absolute top-full left-0 mt-2 w-full bg-white dark:bg-slate-700 rounded-md shadow-lg z-10">
                            <a href="#" id="show-add-form-btn" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-200 hover:bg-slate-100 dark:hover:bg-slate-600">Tambah Outlet Baru</a>
                        </div>
                    </div>
                    <div id="add-outlet-wrapper" class="hidden transition-all duration-500 ease-in-out">
                        <hr class="my-4 border-slate-200 dark:border-slate-600" />
                        <AddOutletForm client:load />
                    </div>
                </div>
            </div>
        </div>
    </div>
</MainLayout>